{
  "name": "galilee-server",
  "version": "0.0.1",
  "description": "Scripture Engagement Application: Server",
  "main": "main.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "knex:migrate": "GALILEE=development knex migrate:latest",
    "knex:migrate:prod": "GALILEE=production knex --env production migrate:latest",
    "knex:seed": "GALILEE=development knex seed:run",
    "knex:seed:prod": "GALILEE=production knex --env production seed:run",
    "start": "GALILEE=development node main.js",
    "start:prod": "GALILEE=production node main.js",
    "watch": "GALILEE=development nodemon main.js",
    "watch:prod": "GALILEE=production nodemon main.js",
    "test": "lab --verbose --transform node_modules/lab-babel --globals __core-js_shared__",
    "test-cov": "lab --transform node_modules/lab-babel --globals __core-js_shared__ --reporter html --output foo-coverage.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quantum-bits/galilee.git"
  },
  "author": "Tom Nurkkala",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quantum-bits/galilee/issues"
  },
  "homepage": "https://github.com/quantum-bits/galilee#readme",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "blipp": "^2.3.0",
    "bluebird": "^3.4.7",
    "boom": "^4.2.0",
    "chalk": "^1.1.3",
    "debug": "^2.6.1",
    "good": "^7.1.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.1",
    "hapi": "^16.1.0",
    "hapi-auth-jwt2": "^7.2.4",
    "hoek": "^4.1.0",
    "inert": "^4.1.0",
    "joi": "^10.2.2",
    "knex": "^0.12.6",
    "lodash": "^4.17.4",
    "lout": "^9.2.0",
    "marked": "^0.3.6",
    "moment": "^2.17.1",
    "moment-range": "^3.0.2",
    "nconf": "^0.8.4",
    "objection": "^0.6.2",
    "pg": "^6.1.2",
    "pm2": "^2.4.0",
    "random-js": "^1.0.8",
    "rx": "^4.1.0",
    "superagent": "^3.4.4",
    "tv": "^6.1.0",
    "uuid": "^3.0.1",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "code": "^4.0.0",
    "faker": "^3.1.0",
    "lab": "^12.1.0",
    "lab-babel": "^1.1.1",
    "nodemon": "^1.11.0"
  }
}
